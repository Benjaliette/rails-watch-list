<h2><%= @list.name %></h2>

<ul>
  <% @movies.each do |movie| %>
    <li>
      <%= movie.title %>
      <%= image_tag movie.poster_url, width: "100px" %>
      <%= link_to "Delete", bookmark_path(movie.bookmarks.ids.first), method: :delete, data: { confirm: "Sure?" } %>
    </li>
  <% end %>
</ul>


<%= link_to "Add a movie to this list", new_list_bookmark_path(@list) %>
